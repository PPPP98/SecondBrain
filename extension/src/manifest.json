{
  "manifest_version": 3,
  "name": "SecondBrain Extension",
  "version": "1.0.0",
  "description": "Save and organize web pages to your SecondBrain",

  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "permissions": ["storage", "tabs", "activeTab", "scripting"],

  "host_permissions": ["https://api.brainsecond.site/*"],

  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/overlay/index.tsx"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
