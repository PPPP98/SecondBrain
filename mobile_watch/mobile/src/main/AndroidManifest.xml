<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 워치와 통신을 위한 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 음성 인식 권한 (웨이크워드 감지) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground Service 권한 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />

    <!-- Full-Screen Intent 권한 (백그라운드에서 앱 실행) -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- 화면 켜기 권한 (웨이크워드 감지 시) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".SecondBrainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecondBrain"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- 워치 연결을 위한 메타데이터 -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Wearable API 사용 명시 -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />

        <!-- 메인 액티비티 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:showWhenLocked="true"
            android:turnScreenOn="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 액티비티 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />

        <!-- 노트 상세 조회 액티비티 -->
        <activity
            android:name=".ui.note.NoteDetailActivity"
            android:exported="false" />

        <!-- 음성/텍스트 검색 액티비티 -->
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true">
            <!-- 워치에서 Deep Link로 열기 위한 intent-filter -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="secondbrain"
                    android:host="search" />
            </intent-filter>
        </activity>

        <!-- 검색 결과 표시 액티비티 -->
        <activity
            android:name=".ui.search.SearchResultActivity"
            android:exported="false" />

        <!-- 웨이크워드 감지 백그라운드 서비스 -->
        <service
            android:name=".service.WakeWordService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- Wearable Message Listener Service -->
        <service
            android:name=".service.MobileWearableListenerService"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="com.google.android.gms.wearable.CAPABILITY_CHANGED" />
                <action android:name="com.google.android.gms.wearable.CHANNEL_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>