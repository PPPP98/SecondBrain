<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 뒤로가기 버튼 -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 뒤로"
            android:backgroundTint="#6C757D"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- 노트 상세 정보 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="노트 정보"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvNoteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvNoteContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvNoteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 연결된 노트 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연결된 노트 (1 Depth)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- 로딩 메시지 -->
        <TextView
            android:id="@+id/tvLoadingNeighbors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연결된 노트 로딩 중..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="visible" />

        <!-- 연결된 노트 리스트 컨테이너 -->
        <LinearLayout
            android:id="@+id/layoutNeighborNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <!-- 연결된 노트 없음 메시지 -->
        <TextView
            android:id="@+id/tvNoNeighbors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연결된 노트가 없습니다."
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
