<?xml version="1.0" encoding="utf-8"?>
<!--
    음성 및 텍스트 검색 화면 레이아웃
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_background_gradient"
    tools:context=".ui.search.SearchActivity">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:src="@drawable/logo"
        android:contentDescription="Second Brain Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/searchInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.42"
        android:layout_marginBottom="2dp" />

    <!-- 검색 입력 영역 -->
    <LinearLayout
        android:id="@+id/searchInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:background="@drawable/search_box_background"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 텍스트 입력 필드 -->
        <EditText
            android:id="@+id/etSearchQuery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="질문 내용을 입력하세요"
            android:textColorHint="#9090A0"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionSearch" />

        <!-- 검색 아이콘 -->
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="검색"
            android:tint="#9090A0"
            android:padding="8dp" />

        <!-- 음성 인식 버튼 -->
        <ImageButton
            android:id="@+id/btnVoiceSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_btn_speak_now"
            android:contentDescription="음성 검색"
            android:tint="#9090A0"
            android:padding="8dp" />
    </LinearLayout>

    <!-- 음성 인식 상태 표시 -->
    <TextView
        android:id="@+id/tvVoiceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음성을 듣고 있습니다..."
        android:textColor="#9090A0"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
